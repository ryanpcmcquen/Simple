{
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "description": "Focus on your code, not your settings.",
    "icons": {
        "128": "assets/img/Simple_icon.png"
    },
    "manifest_version": 2,
    "offline_enabled": true,
    "name": "Simple",
    "permissions": [
        "contextMenus",
        {
            "fileSystem": [
                "write",
                "retainEntries",
                "directory"
            ]
        },
        "storage",
        "unlimitedStorage"
    ],
    "version": "3.5.6",
